                        <% for(var i = 0; i < report.length; i++) { %>
                          <tr>
                            <td>
                              <%= report[i].name %>
                            </td>
                            <td>
                              <%= report[i].product %>
                            </td>
                            <td>
                              <%= report[i].date %>
                            </td>
                            <td>
                              <% totalPrice = totalPrice + report[i].price; %>
                              <%= report[i].price %>
                            </td>
                          </tr>
                        <% } %>
                      <% } %>
                      <% if(totalPrice){ %>
                      <tr>
                        <td colspan="3">Total Price</td>
                        <td hidden></td>
                        <td hidden></td>
                        <td><%= totalPrice.toFixed(2) %></td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
