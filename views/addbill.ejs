        <div class="col-lg-1"></div>
        <form action="/addbill" method="POST">
        <div class="col-lg-10">
            <div class="card">
              <div class="card-header"><strong>Add Bill</strong><small> Form</small></div>
              <div class="card-body card-block">
                <% if(message){ %>
                        <div class="alert alert-error alert-danger alert-dismissible fade show text-center" role="alert">
                        <span class="badge badge-pill badge-danger">Error</span>
                        <%= message %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                <% } %>
                <% if(successMessage){ %>
                    <div class="alert  alert-success alert-dismissible fade show text-center" role="alert">
                        <span class="badge badge-pill badge-success">Success</span>
                        <%= successMessage %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                <% } %>
                <div class="form-group"><label for="name" class=" form-control-label">Full Name</label><input type="text" name="name" id="name" placeholder="Enter your full name" class="form-control" required></div>
                <div class="form-group"><label for="company" class=" form-control-label">Company Name</label><input type="text" name="cname" id="company" placeholder="Enter company name (Optional)" class="form-control"></div>                
                <div class="form-group"><label for="address" class=" form-control-label">Address</label><input type="text" id="address" name="address" placeholder="Enter your address" class="form-control" required></div>
                <div class="row form-group">
                  <div class="col-6">
                    <div class="form-group"><label for="city" class=" form-control-label">City</label><input type="text" id="city" name="city" placeholder="Enter your city" class="form-control" required></div>
                  </div>
                  <div class="col-6">
                    <div class="form-group"><label for="postal-code" class=" form-control-label">Postal Code</label><input type="text" name="postal" id="postal-code" placeholder="Postal Code" class="form-control" required></div>
                  </div>
                </div>
                <div class="row form-group">
                    <div class="col-4"><label for="mobile" class=" form-control-label">Mobile No</label><input type="number" id="mobile" name="mobile" placeholder="Enter Mobile No" class="form-control" required></div>
                    <div class="col-4"><label for="email" class=" form-control-label">Email ID</label><input type="email" id="email" name="email" placeholder="Enter Email ID" class="form-control" required></div>
                    <div class="col-4"><label for="date" class="form-control-label">Invoice Date</label><input class="form-control" type="date" name="date" placeholder="dd/mm/yyyy" id="date" required></div>                
                </div>
                <hr>
                <div class="row form-group">
                    <div class="col-6">
                        <label for="product" class="form-control-label">Product</label>
                        <select class="form-control" id="product" name="product" required>
                            <optgroup label="Available Products">
                                <option value="#" selected>Choose One or More Product</option>
                                <option value="Zenfone Max">Zenfone Max</option>
                                <option value="Lenovo K6 Power">Lenovo K6 Power</option>
                                <option value="ParleG Biscuit">ParleG Biscuit</option>
                            </optgroup>
                        </select>
                    </div>
                    <div class="col-6">
                        <label for="quantity" class=" form-control-label">Quantity</label><input type="number" id="quantity" name="quantity" placeholder="Enter Quantity" class="form-control" required>
                    </div>
                </div>                          
                <div class="row form-group">
                    <div class="col-4"></div>
                    <div class="col-2">                              
                        <div class="form-group text-center"><button type="submit" class="btn btn-outline-success"><i class="fa fa-magic"></i>&nbsp; Submit</button></div>
                    </div>
                    <div class="col-2">
                        <div class="form-group text-center"><button type="reset" class="btn btn-outline-warning"><i class="fa fa-map-marker"></i>&nbsp; Reset</button></div>
                    </div>    
                </div>
            </div>
            </div>
          </div>
