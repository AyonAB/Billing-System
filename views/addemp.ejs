        <div class="col-lg-1"></div>
        <form method="POST" action="/addemp" name="form" onsubmit="return Validation()">
        <div class="col-lg-10">
            <div class="card">
              <div class="card-header"><strong>Add Employee</strong><small> Form</small></div>
              <div class="card-body card-block">
                    <% if(message){ %>
                        <div class="alert alert-error alert-danger alert-dismissible fade show text-center" role="alert">
                            <span class="badge badge-pill badge-danger">Error</span>
                            <%= message %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    <% } %>
                    <% if(successMessage){ %>
                        <div class="alert  alert-success alert-dismissible fade show text-center" role="alert">
                            <span class="badge badge-pill badge-success">Success</span>
                            <%= successMessage %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    <% } %>
                <div class="form-group"><label for="name" class=" form-control-label">Full Name</label><input type="text" id="name" name="name" placeholder="Enter Employee name" class="form-control"></div>
                <div class="form-group"><label for="address" class=" form-control-label">Address</label><input type="text" id="address" name="address" placeholder="Enter the address" class="form-control"></div>
                <hr/>
                <div class="row form-group">
                    <div class="col-6">
                      <div class="form-group"><label for="username" class=" form-control-label">User Name</label><input type="text" id="username" name="username" placeholder="Enter the username" class="form-control"></div>
                    </div>
                    <div class="col-6">
                      <div class="form-group"><label for="password" class=" form-control-label">Password</label><input type="password" id="password" name="password" placeholder="Enter The password" class="form-control"></div>
                    </div>
                    
                </div>
                <hr/>
                <div class="row form-group">
                    <div class="col-4">
                        <label for="mobile" class=" form-control-label">Mobile No</label>
                        <input type="text" id="mobile" name="mobile" placeholder="Enter Mobile No" class="form-control">
                    </div>
                    <div class="col-4">
                        <label for="email" class=" form-control-label">Email ID</label>
                        <input type="email" id="email" name="email"placeholder="Enter Email ID" class="form-control">
                    </div>
                    <div class="col-4">
                        <label for="joining_date" class="form-control-label">Joining Date</label>
                        <input class="form-control" type="date" name="joining_date" placeholder="dd/mm/yyyy" id="joining_date">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-4"></div>
                    <div class="col-2">                              
                        <div class="form-group text-center"><button type="submit" class="btn btn-outline-success"><i class="fa fa-magic"></i>&nbsp; Submit</button></div>
                    </div>
                    <div class="col-2">
                        <div class="form-group text-center"><button type="reset" class="btn btn-outline-warning"><i class="fa fa-map-marker"></i>&nbsp; Reset</button></div>
                    </div>    
                </div>
            </div>
            </div>
          </div>
        </form>
    </div>
    <script src="assets/js/vendor/jquery-2.1.4.min.js"></script>
